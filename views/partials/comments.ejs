        <h2 class="ui horizontal blue header centered" onclick="comments()">Comments</h4>
        <div class="center">
            <a class="ui green button" href="/tv_nhc/<%= est._id %>/comments/new">New Comment</a>
        </div>
        <% est.comments.forEach(function(comment){ %>
        <div class="ui container segment">
            <div class="fields">
                <div class="field">
                    <strong><%= comment.author.username %></strong>
                    <span> - <%=comment.created.toDateString()%></span>
                    <p>
                        <%= comment.text %>
                    </p>
                </div>   
            </div>
            <div class="centered">
                <a class="ui yellow button"
                    href="/tv_nhc/<%=est._id%>/comments/<%=comment._id%>/edit">
                    Edit
                </a>
                <form action="/tv_nhc/<%=est._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                    <input type="submit" class="ui red button" value="Delete">
                </form>
            </div>
        </div>  
        <% }) %>
