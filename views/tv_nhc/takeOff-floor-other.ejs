<% include ../partials/header %>
<div class="ui main text new container segment">
        <div class="ui huge header jobNumber">Take Off - <%= est.jobNumber %> </div>
        <form class="ui form" action="/tv_nhc" method="POST">
            <div class="ui top attached">
                <table class="ui definition table">
                <h4 class="ui horizontal teal divider header">Other Flooring Take Off</h4>
                    <tbody>
                        <tr>
                            <td class="two column"><label>Room(s)</label></td>
                            <td><input type="text" name="room" required placeholder="Room Name" autofocus></td>
                            <td><strong>Material</strong></td>
                            <td><input type="text" name="materials" required placeholder="Material"></td>
                        </tr>
                        <tr>
                            <td><strong>Style</strong></td>
                            <td><input type="text" name="style" required placeholder="Style"></td>
                            <td><strong>Color</strong></td>
                            <td><input type="text" name="color" required placeholder="Color"></td>
                        </tr>
                        <tr>
                            <td><strong>Width</strong></td>
                            <td><input type="text" name="width" required placeholder="Width"></td>
                            <td><strong>Length</strong></td>
                            <td><input type="text" name="length" required placeholder="Length"></td>
                        </tr>
                        <tr>
                            <td><strong>Direction</strong></td>
                            <td><input type="text" name="direction" required placeholder="direction"></td>
                            <td><strong>Pattern</strong></td>
                            <td><input type="text" name="pattern" required placeholder="Pattern"></td>
                        </tr>
                        <tr>
                            <td><strong>Net</strong></td>
                            <td><input type="text" name="net" required placeholder="Net Amount"></td>
                            <td><strong>Gross</strong></td>
                            <td><input type="text" name="gross" required placeholder="Gross Amount"></td>
                        </tr>
                    </tbody>
                </table>
                <h4 class="ui horizontal teal divider header">Installer Notes</h4>
                <div class="fields">
                    <textarea class="field" rows="4" name="notes"></textarea>
                </div>
            </div>
            <div class="center">
                <a href="/tv_nhc/<%=est._id%>/takeOff-floor" class="ui green basic button">Back</a>
                <input class="ui green basic button" type="submit" value="Add">
                <a href="#" class="ui yellow basic button">Clear</a>
                <a href="/tv_nhc/<%=est._id%>" class="ui blue basic button">Done</a>
            </div>
        </form>
    </div>

<% include ../partials/footer %>